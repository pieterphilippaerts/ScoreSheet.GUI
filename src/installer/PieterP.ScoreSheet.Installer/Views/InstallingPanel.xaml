<UserControl x:Class="PieterP.ScoreSheet.Installer.Views.InstallingPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PieterP.ScoreSheet.Installer.Views"
             xmlns:l="clr-namespace:PieterP.ScoreSheet.Installer.Localization"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    <StackPanel>
        <TextBlock FontSize="20" Margin="5" Text="{x:Static l:Strings.Installing_Title}"/>
        <TextBlock Margin="5" TextWrapping="Wrap" Text="{x:Static l:Strings.Installing_Message}"/>
        <ProgressBar Margin="0 20 0 5" IsIndeterminate="true" Height="10" Width="300" HorizontalAlignment="Center" />
        <TextBlock Margin="5 0" Text="{Binding Status}" HorizontalAlignment="Center" TextWrapping="Wrap"/>
    </StackPanel>
</UserControl>

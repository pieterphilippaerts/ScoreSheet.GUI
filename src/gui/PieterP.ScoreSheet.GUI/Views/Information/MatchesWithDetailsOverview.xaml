                                            <Binding Path="HomeMatchesWon.Value" />
                                            <Binding Path="AwayMatchesWon.Value" />
                                        </MultiBinding>
                                    </TextBlock.Foreground>
                                </TextBlock>
                                <TextBlock Text="{Binding AwayMatchesWon.Value}"  FontWeight="Bold">

<UserControl x:Class="PieterP.ScoreSheet.GUI.Views.Settings.AutoUploadPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:l="clr-namespace:PieterP.ScoreSheet.Localization.Views.Settings;assembly=ScoreSheet.Localization"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PieterP.ScoreSheet.GUI.Views.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="264" d:DesignWidth="346">
    <StackPanel>
        <TextBlock Margin="5" TextWrapping="Wrap" Text="{x:Static l:Resources.AutoUpload_Description}"/>
        <CheckBox Margin="10 5" IsChecked="{Binding EnableAutoUpload.Value}">
            <TextBlock TextWrapping="Wrap" Text="{x:Static l:Resources.AutoUpload_Enable}"/>
        </CheckBox>
        <TextBlock Margin="5" TextWrapping="Wrap" Text="{x:Static l:Resources.AutoUpload_NonCompetitive}"/>
        <TextBlock Margin="5" TextWrapping="Wrap" Text="{x:Static l:Resources.AutoUpload_Warning}"/>
    </StackPanel>
</UserControl>

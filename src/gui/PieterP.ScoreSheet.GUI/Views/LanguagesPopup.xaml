<Popup x:Class="PieterP.ScoreSheet.GUI.Views.LanguagesPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PieterP.ScoreSheet.GUI.Views"
             mc:Ignorable="d" Width="400" Height="350">
    <Border Background="{x:Static SystemColors.ControlBrush}" BorderThickness="1" BorderBrush="{x:Static SystemColors.ActiveBorderBrush}">
        <ContentControl Content="{Binding Content}" />
    </Border>
</Popup>
